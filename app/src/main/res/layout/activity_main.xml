<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg1"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etNama"
        android:drawableLeft="@drawable/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="120dp"
        android:hint="Masukan Nama mahasiswa"
        android:drawablePadding="15dp"/>

    <EditText
        android:id="@+id/etNim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/nim"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_marginLeft="70dp"
        android:hint="Masukan NIM Mahasiswa"
        android:drawablePadding="15dp"/>

    <EditText
        android:id="@+id/etProdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/kelas"
        android:textColor="@color/black"
        android:hint="Masukan Prodi Mahasiswa"
        android:textSize="15dp"
        android:layout_marginLeft="70dp"
        android:drawablePadding="15dp"/>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="340dp"
        android:layout_height="55dp"
        android:layout_marginLeft="27dp"
        android:backgroundTint="#2180F3"
        android:text="Isi Identitas Lainnya"
        android:layout_marginTop="320dp"/>


</LinearLayout>